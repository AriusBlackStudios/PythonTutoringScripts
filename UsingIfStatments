#valB= int(input("Enter the second value: "))
menu = "go"
test=1
while (menu == "go"):
  
  if (test==1):
    print("Performing Progam assignment 4.2")
    a= int(input("Enter the first value: "))
    b= int(input("Enter the second value: "))
    sumNums(a,b)
    print()
    temp =input("to move onto the next test enter 'N'. to repeat this one, enter 'R'. to stop, enter 'S' :")
    if (temp =="N"):
      menu ="go"
      test=2
  
    if (temp == "R"):
      menu = "go"
      test =1
    if (temp== "S"):
      menu="stop"
    else:
      menu = "go"


  if(test==2):
    print()
    print("Performing Progam assignment 4.3")
    c= int(input("Enter the value: "))
    addFive(c)
    temp =input("to move onto the next test enter 'N'. to repeat this one, enter 'R'. to stop, enter 'S' :")
    if (temp =="N"):
      menu ="go"
      test=3
  
    if (temp == "R"):
      menu = "go"
      test =2
    if (temp=="S"):
      menu="stop"
    else:
      menu="go"
      
  if (test==3):
    print()
    print("Performing Progam assignment 4.5")
    day= input("Enter the day of the week: ")
    weekend(day)
    temp =input("to repeat this test, enter 'R'. to stop running, enter 'S': ")
    if (temp == "R"):
      menu = "go"
      test =3
    if (temp== "S"):
      menu="stop"
    else:
      menu = "go"
