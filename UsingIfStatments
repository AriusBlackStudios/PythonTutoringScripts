#precondition: valA and valB have to be integers
#post condition: creates a sum, and passes the sum and the two addenends to isEven
def sumNums(valA,valB):
  sum = valA +valB
  isEven(valA,valB,sum)
  

#precondition: valA have to be integers
#post condition: creates a sum of value a and five , and passes the sum and the two addenends to isEven
def addFive(valA):
  added = valA+5
  isEven( valA, 5, added)


#precondition: passed in from above functions, and has three parameters that are all integers, the sum has to equal the two before it
#post condition: determine if the sum is even or odd
def isEven(a,b,total):
  if (a+b != total):
    print("error, invalid math addends!")
    return
  if (total%2 == 0):
     print ("the sum of " + str(a) + " and " + str(b)+ " is even")
  else:
     print ("the sum of "+ str(a) + " and " + str(b)+" is odd")

#precondition: a weekday string is made and passed in
#post condition: determines if its a weekday, or a weekend, or if the thing entered is not a day at all
def weekend(weekday):
  day=weekday.lower()
  if ( day == "sunday") or (day=="saturday"):
    print ("its the weekend!")
  elif ( day == "monday") or (day=="tuesday") or ( day == "wednesday") or (day=="thursday") or ( day == "friday"):
    print ("its a week day!")
  else:
    print( "invalid input!")


